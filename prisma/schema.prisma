generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String    @default("")
  name      String?
  role      String    @default("CUSTOMER") // ADMIN or CUSTOMER
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  posts     Post[]
  bookings  Booking[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model Motor {
  id          Int       @id @default(autoincrement())
  name        String
  plateNumber String    @unique
  type        String    // Automatic, Manual
  cc          String
  brand       String
  model       String
  year        Int
  color       String?
  status      String    @default("Available") // Available, Rented, Maintenance
  location    String    @default("Central Office")
  pricePerDay Decimal   @db.Decimal(10, 2)
  image       String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]

  @@index([status])
  @@index([plateNumber])
}

model Booking {
  id             Int      @id @default(autoincrement())
  bookingCode    String   @unique
  userId         Int
  motorId        Int
  startDate      DateTime
  endDate        DateTime
  totalDays      Int
  totalPrice     Decimal  @db.Decimal(10, 2)
  status         String   @default("Pending") // Pending, Paid, Active, Completed, Cancelled
  paymentStatus  String   @default("Unpaid") // Unpaid, Paid, Refunded
  paymentMethod  String?  // Midtrans payment method
  transactionId  String?  // Midtrans transaction ID
  paymentUrl     String?  // Midtrans payment redirect URL
  paidAt         DateTime?
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])
  motor          Motor    @relation(fields: [motorId], references: [id])

  @@index([userId])
  @@index([motorId])
  @@index([status])
  @@index([bookingCode])
  @@index([transactionId])
}